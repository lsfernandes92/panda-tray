{
  "name": "Pandinhe",
  "author": "Lucas Fernandes (https://lsfernandes92.github.io/portifolio/)",
  "version": "1.0.0",
  "description": "An animated sleeping panda tray icon, built with Electron, that appears on the MacOS menu bar.",
  "main": "main.js",
  "build": {
    "appId": "com.jaggiesweekly.pandinhe",
    "productName": "Pandinhe",
    "icon": "assets/icon.icns",
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "dmg": {
      "title": "Pandinhe",
      "backgroundColor": "#fff8dc",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": "deb"
    }
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dist": "electron-builder build --win --mac --linux",
    "dist:linux": "electron-builder build --linux",
    "dist:mac": "electron-builder build --mac",
    "dist:win": "electron-builder build --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lsfernandes92/panda_tray.git"
  },
  "keywords": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lsfernandes92/panda_tray/issues"
  },
  "homepage": "https://github.com/lsfernandes92/panda_tray#readme",
  "devDependencies": {
    "@electron-forge/cli": "^7.5.0",
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@electron-forge/maker-squirrel": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.5.0",
    "@electron-forge/plugin-fuses": "^7.5.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  }
}
